    "require": {
        "php": ">=5.4",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "~1.2",
        "phpunit/phpunit": "~4.8"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Solodkiy",
            "email": "work@x1.by"
        }
    ],
    "extra": {
        "class": "Solodkiy\\ComposerMonorepoHelper\\MonorepoHelperPlugin"
    },
    "autoload": {
        "psr-4": {
            "Solodkiy\\ComposerMonorepoHelper\\": "src"
        }
    }
}
